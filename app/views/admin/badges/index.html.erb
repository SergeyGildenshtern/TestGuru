<h1>Badges</h1>

<p><%= link_to 'New badge', new_admin_badge_path %></p>

<% if @badges.present? %>
  <table class="table">
    <tr>
      <th class="sort-by-title pointer">
        Title
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th>Description</th>
      <th>Image</th>
      <th>Image URL</th>
      <th>Type</th>
      <th colspan="3">Actions</th>
    </tr>

    <%= render @badges %>
  </table>
<% else %>
  <h5>No Badges</h5>
<% end %>

<%= link_to 'Back', admin_root_path %>
