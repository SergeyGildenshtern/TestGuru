<h1><%= @question.test.title %> Question</h1>

<p>
  <%= @question.text %>
</p>

<%= link_to 'New answer', new_question_answer_path(@question) %>

<% if @question.answers.any? %>
  <h2>Answers</h2>

  <ol>
    <%= render @question.answers %>
  </ol>
<% else %>
  <p><b>The question has no answers</b></p>
<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', test_path(@question.test) %>
